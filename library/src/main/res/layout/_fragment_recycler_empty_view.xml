<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="gone"
    android:id="@+id/emptyView">


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/_empty_box"
        android:id="@+id/emptyViewImage"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/_emptyViewMessage"
        android:id="@+id/emptyViewMessage"
        android:textColor="@color/_emptyViewMessageColor"
        android:layout_below="@+id/emptyViewImage"
        android:layout_centerHorizontal="true"
        android:textSize="@dimen/_emptyViewMessageTextSize"
        android:layout_marginTop="20dp" />

</RelativeLayout>